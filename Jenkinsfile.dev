pipeline {
    agent any

    options {
        timeout(time: 5, unit: 'SECONDS')
        buildDiscarder(logRotator(numToKeepStr: '3'))
    }
    environment {
        APP_ENV = "staging"
        withCredentials([
                    usernamePassword(
                        credentialsId: '222',
                        usernameVariable: 'USER',
                        passwordVariable: 'PASS'
                    )
                ]) {
                    USERE = USER
                    PASSE = PASS
                }
    }

    stages {

        stage('Hello') {
            steps {
                echo 'Hello World'
                echo "${APP_ENV}"
            }
        }

        stage('learn credentials') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: '222',
                        usernameVariable: 'USER',
                        passwordVariable: 'PASS'
                    )
                ]) {
                    bat '''
                        echo Deploying as %USER% %PASS%
                    '''
                }
            }
        }

        stage('build') {
            steps {
                echo 'The second stage'
                echo 'The second steps'
            }
        }
    }
}